# Archivo de variables de entorno - Copiar a .env y configurar
# ================================================================

# Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_user
DB_PASSWORD=trading_pass

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# InfluxDB
INFLUX_HOST=localhost
INFLUX_PORT=8086
INFLUX_USER=admin
INFLUX_PASSWORD=admin

# APIs de Exchanges
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_secret_here

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_secret_here

# Alertas - Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Alertas - Email
SMTP_SERVER=smtp.gmail.com
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
FROM_EMAIL=trading-bot@yourdomain.com
ALERT_EMAIL=alerts@yourdomain.com

# Alertas - Discord
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Alertas - SMS (Twilio)
TWILIO_SID=your_twilio_account_sid
TWILIO_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
ALERT_PHONE=+1987654321

# API Security
API_SECRET_KEY=your_super_secret_key_for_jwt_tokens

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# AWS (para backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-trading-bot-bucket

# Configuración de entorno
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO